#board-view
  aside
    position: fixed
    z-index: 2
    width: 200px
    border: 1px solid #888
    border-radius: 0 10px 10px 0
    padding: 10px
    background-color: #eee
    .toggle-menu
      display: block
      float: right
      color: #333
      font-size: 1.5em
      text-decoration: none
    .toggle-menu:before
      content: "«"
  aside.closed
    left: -190px
    .toggle-menu:before
      content: "»"

#postits-view
  position: fixed
  top: 0
  width: 100%
  height: 100%
  overflow: hidden

.moving
  opacity: 0.4

.postit
  position: fixed
  cursor: move

.line
  position: fixed
